/* Navbar*/
.navbar
  text-align center
.navbar li
  display inline-block

.item
  display block
  background-color green
  color white
  margin 2px
  padding 10px
  width 100px
  height 25px
  line-height 25px
  text-align center
  text-decoration none
  transition width 1s, height 1s

.item.hover
  color white
  width 110px
  height 30px
  line-height 30px
  transition width 1s, height 1s
/*-------------*/

/* Footer*/

.footer
  border-top 2px solid black
  text-align center
