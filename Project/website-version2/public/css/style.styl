*
  margin 0
  padding 0
img
  width 100%
a
  color #00B7FF
h1,
h2,
h3,
h4,
h5,
h6
  padding 0 !important
  margin 0 !important
hr
  padding 0 !important
  margin 0 0 10px 0 !important

